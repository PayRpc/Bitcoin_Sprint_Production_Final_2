# Bitcoin Sprint Configuration - FREE TIER
# Basic tier with limited resources for development/testing

# Activate Free Tier
TIER=free

# API Configuration
API_HOST=0.0.0.0
API_PORT=8080

# Web Dashboard Configuration
WEB_HOST=0.0.0.0
WEB_PORT=3000

# Admin Configuration (Free tier)
ADMIN_PORT=8081

# Bitcoin Node Configuration
BITCOIN_NODE=127.0.0.1:8333
ZMQ_NODE=127.0.0.1:28332

# P2P Configuration
PEER_LISTEN_PORT=8335
PEER_HMAC_SECRET=bitcoin-sprint-free-secret-key-2025

# Security & Authentication
LICENSE_KEY=FREE-TIER-BASIC-FEATURES
API_KEY=free-api-key-changeme

# Performance Settings (Free Tier)
USE_DIRECT_P2P=false
USE_MEMORY_CHANNEL=false
OPTIMIZE_SYSTEM=false
ENABLE_KERNEL_BYPASS=false

# Rate Limiting (Free Tier)
RATE_LIMIT_REQUESTS_PER_SECOND=1
RATE_LIMIT_REQUESTS_PER_HOUR=1000
CONCURRENT_STREAMS=1
DATA_SIZE_LIMIT_MB=10

# Monitoring (Basic)
ENABLE_PROMETHEUS=true
PROMETHEUS_PORT=9090
ENABLE_ENTROPY_MONITORING=false

# Database (Basic)
DATABASE_TYPE=sqlite
DATABASE_URL=./free_tier.db
ENABLE_PERSISTENCE=true

# Logging
LOG_LEVEL=info
LOG_FILE=logs/free_tier.log
