# Bitcoin Sprint Configuration - ENTERPRISE TIER
# Enterprise tier with maximum performance and security

# Activate Enterprise Tier
TIER=enterprise

# API Configuration
API_HOST=0.0.0.0
API_PORT=9000
API_READ_TIMEOUT_SEC=30
API_WRITE_TIMEOUT_SEC=30
P2P_PEER_TIMEOUT_SEC=30

# Admin Configuration (Separate port for enterprise)
ADMIN_PORT=9001

# Web Dashboard Configuration
WEB_HOST=0.0.0.0
WEB_PORT=3002

# Bitcoin Node Configuration (HTTP RPC Endpoints)
BITCOIN_HTTP_ENDPOINTS=https://bitcoin-rpc.publicnode.com,https://blockstream.info/api/,https://mempool.space/api/
BITCOIN_WS_ENDPOINTS=wss://mempool.space/api/v1/ws
BITCOIN_TIMEOUT=30
BITCOIN_MAX_CONNECTIONS=10

# Ethereum Node Configuration
ETH_HTTP_ENDPOINTS=https://eth.rpc.nethermind.io,https://rpc.eth.gateway.fm,https://ethereum.publicnode.com
ETH_WS_ENDPOINTS=wss://ethereum.publicnode.com,wss://eth.drpc.org
ETH_TIMEOUT=30
ETH_MAX_CONNECTIONS=10

# Solana Node Configuration
SOL_HTTP_ENDPOINTS=https://api.mainnet-beta.solana.com,https://solana-rpc.publicnode.com,https://rpc.ankr.com/solana
SOL_WS_ENDPOINTS=wss://api.mainnet-beta.solana.com,wss://solana-mainnet.blockpi.network/v1/ws/public
SOL_TIMEOUT=30
SOL_MAX_CONNECTIONS=15

# Sprint Acceleration Layer Configuration
ENABLE_ACCELERATION=true
ACCELERATION_MODE=true
PREDICTIVE_CACHING=true
CACHE_HIT_TARGET=87
LATENCY_FLATTENING=false
MULTI_PEER_REDUNDANCY=true
CIRCUIT_BREAKER_THRESHOLD=5

# P2P Configuration
PEER_LISTEN_PORT=8335
PEER_HMAC_SECRET=bitcoin-sprint-enterprise-secret-key-2025-secure

# Security & Authentication
LICENSE_KEY=ENTERPRISE-FULL-FEATURES-ACTIVE
API_KEY=enterprise-api-key-changeme

# Performance Settings (Enterprise Tier)
USE_DIRECT_P2P=true
USE_MEMORY_CHANNEL=true
OPTIMIZE_SYSTEM=true
ENABLE_KERNEL_BYPASS=true

# Rate Limiting (Enterprise Tier)
RATE_LIMIT_REQUESTS_PER_SECOND=500
RATE_LIMIT_REQUESTS_PER_HOUR=500000
CONCURRENT_STREAMS=100
DATA_SIZE_LIMIT_MB=5000

# Monitoring (Enterprise-grade)
ENABLE_PROMETHEUS=true
PROMETHEUS_PORT=9090
ENABLE_ENTROPY_MONITORING=true
ENTROPY_METRICS_INTERVAL=30s
ENTROPY_FINGERPRINT_ENABLED=true
ENTROPY_TEMPERATURE_MONITORING=true
ENTROPY_SECURITY_LEVEL=high

# Entropy source configuration
ENTROPY_SOURCES=os_rng,jitter,blockchain,hardware_fingerprint,cpu_temperature
PRIMARY_ENTROPY_SOURCE=hybrid
FALLBACK_ENTROPY_SOURCE=os_rng

# Hardware entropy settings
CPU_FINGERPRINT_ENABLED=true
TEMPERATURE_MONITORING_ENABLED=true
SYSTEM_FINGERPRINT_UPDATE_INTERVAL=300s

# Security monitoring
ENABLE_TLS=true
ENABLE_MTLS=true

# Database (Enterprise)
DATABASE_TYPE=sqlite
DATABASE_URL=./enterprise_tier.db
ENABLE_PERSISTENCE=true

# WebSocket Configuration (Enterprise)
WEBSOCKET_MAX_GLOBAL=10000
WEBSOCKET_MAX_PER_IP=100
WEBSOCKET_MAX_PER_CHAIN=1000
IDLE_TIMEOUT_SEC=600
MESSAGE_RATE_LIMIT=1000

# Logging
LOG_LEVEL=debug
LOG_FILE=logs/enterprise_tier.log
