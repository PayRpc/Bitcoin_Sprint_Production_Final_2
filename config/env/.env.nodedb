# Bitcoin Sprint Configuration - ENTERPRISE TIER (NO DATABASE)
# Enterprise tier with maximum performance and security - Database disabled for testing

# Activate Enterprise Tier
TIER=enterprise

# API Configuration
API_HOST=127.0.0.1
API_PORT=9000
API_READ_TIMEOUT_SEC=30
API_WRITE_TIMEOUT_SEC=30
P2P_PEER_TIMEOUT_SEC=30

# Admin Configuration (Separate port for enterprise)
ADMIN_PORT=9001

# Web Dashboard Configuration
WEB_HOST=127.0.0.1
WEB_PORT=3002

# Ethereum Node Configuration
ETH_WS_ENDPOINTS=wss://ethereum.publicnode.com,wss://eth.llamarpc.com,wss://ethereum.blockpi.network/v1/ws/public
ETH_HTTP_ENDPOINTS=https://eth-rpc.nethermind.io,https://gateway.fm/eth/rpc,https://ethereum.publicnode.com
ETH_TIMEOUT=30s
ETH_MAX_CONNECTIONS=10

# Solana Node Configuration
SOLANA_WS_ENDPOINTS=wss://api.mainnet-beta.solana.com,wss://solana-mainnet.blockpi.network/v1/ws/public,wss://rpc.ankr.com/solana/ws
SOLANA_RPC_ENDPOINTS=https://api.mainnet-beta.solana.com,https://solana-mainnet.blockpi.network/v1/rpc/public,https://rpc.ankr.com/solana
SOLANA_TIMEOUT=30s
SOLANA_MAX_CONNECTIONS=15

# Bitcoin Node Configuration
BITCOIN_NODE=127.0.0.1:8333
ZMQ_NODE=127.0.0.1:28332

# P2P Configuration
PEER_LISTEN_PORT=8335
PEER_HMAC_SECRET=bitcoin-sprint-enterprise-secret-key-2025-secure

# Security & Authentication
LICENSE_KEY=ENTERPRISE-FULL-FEATURES-ACTIVE
AUTH_REQUIRED=true

# Sprint Acceleration Layer Configuration
ENABLE_ACCELERATION=true
ACCELERATION_MODE=true
BLOCK_DEDUPLICATION=true
INTELLIGENT_EVICTION=true
PREDICTIVE_CACHING_ENABLED=true
CACHE_HIT_TARGET=87
LATENCY_FLATTENING_ENABLED=true
RESPONSE_VERIFICATION_MODE=full
COMPETITIVE_EDGE_MODE=true

# Enterprise Features
ENTERPRISE_MODE=true
ADAPTIVE_OPTIMIZATION=true
MULTI_PEER_REDUNDANCY=true
ENDPOINT_CIRCUIT_BREAKER=true
PARALLEL_REQUEST_THRESHOLD=200

# Circuit Breaker Configuration
CIRCUIT_BREAKER_THRESHOLD=5
PROVIDER_HEALTH_CHECK_INTERVAL=30s

# Performance Optimization
DEDUP_CAPACITY=20480
ETH_ACCELERATION_TTL=300
SOL_ACCELERATION_TTL=180

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Security monitoring
ENABLE_TLS=false
ENABLE_MTLS=false

# Database (DISABLED FOR TESTING - using postgres with invalid URL to skip)
ENABLE_PERSISTENCE=false
DATABASE_TYPE=postgres
DATABASE_URL=postgres://fake:fake@localhost:5433/fake_db

# WebSocket Configuration (Enterprise)
WEBSOCKET_MAX_GLOBAL=10000
WEBSOCKET_MAX_PER_IP=100
WEBSOCKET_PING_INTERVAL=30s
WEBSOCKET_PONG_TIMEOUT=60s

# Rate Limiting (Enterprise)
RATE_LIMIT_REQUESTS_PER_MINUTE=10000
RATE_LIMIT_BURST=1000

# Memory Management
CACHE_MAX_SIZE=1GB
CACHE_TTL=300s

# Monitoring
METRICS_ENABLED=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=10s

# License
LICENSE_PATH=config/license-enterprise.json

# Node ID
NODE_ID=test-enterprise-node-acceleration
