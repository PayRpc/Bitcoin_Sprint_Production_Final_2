# Bitcoin Sprint Rust Web Server Configuration
# Enterprise-grade hardened web server for storage verification

# Activate Enterprise Tier
TIER=enterprise

# Server Configuration
RUST_LOG=info
API_HOST=0.0.0.0
API_PORT=8443
ADMIN_PORT=8444
PROMETHEUS_PORT=9093

# TLS Configuration
TLS_CERT_PATH=/app/config/tls/cert.pem
TLS_KEY_PATH=/app/config/tls/key.pem

# Redis Configuration (for rate limiting and caching)
REDIS_URL=redis://redis:6379

# Storage Verification
STORAGE_VERIFICATION_ENABLED=true
ENTERPRISE_MODE=true

# Security Settings
RATE_LIMIT_REQUESTS_PER_MINUTE=100
CIRCUIT_BREAKER_THRESHOLD=5
CIRCUIT_BREAKER_TIMEOUT_SECONDS=30
AUDIT_LOG_ENABLED=true
SECURITY_HEADERS_ENABLED=true

# Performance Settings
WORKER_THREADS=4
MAX_CONNECTIONS=1000
REQUEST_TIMEOUT_SECONDS=30
GRACEFUL_SHUTDOWN_TIMEOUT_SECONDS=10

# Monitoring
METRICS_ENABLED=true
HEALTH_CHECK_ENABLED=true
REQUEST_TRACING_ENABLED=true
