# Bitcoin Sprint Configuration - BUSINESS TIER
# Business tier with higher performance and resources

# Activate Business Tier
TIER=business

# API Configuration
API_HOST=0.0.0.0
API_PORT=8082

# Web Dashboard Configuration
WEB_HOST=0.0.0.0
WEB_PORT=3001

# Admin Configuration (Business tier)
ADMIN_PORT=8083

# Bitcoin Node Configuration
BITCOIN_NODE=127.0.0.1:8333
ZMQ_NODE=127.0.0.1:28332

# P2P Configuration
PEER_LISTEN_PORT=8335
PEER_HMAC_SECRET=bitcoin-sprint-business-secret-key-2025

# Security & Authentication
LICENSE_KEY=BUSINESS-TIER-ENHANCED-FEATURES
API_KEY=business-api-key-changeme

# Performance Settings (Business Tier)
USE_DIRECT_P2P=true
USE_MEMORY_CHANNEL=true
OPTIMIZE_SYSTEM=true
ENABLE_KERNEL_BYPASS=false

# Rate Limiting (Business Tier)
RATE_LIMIT_REQUESTS_PER_SECOND=50
RATE_LIMIT_REQUESTS_PER_HOUR=50000
CONCURRENT_STREAMS=20
DATA_SIZE_LIMIT_MB=500

# Monitoring (Advanced)
ENABLE_PROMETHEUS=true
PROMETHEUS_PORT=9090
ENABLE_ENTROPY_MONITORING=true
ENTROPY_METRICS_INTERVAL=30s
ENTROPY_FINGERPRINT_ENABLED=true

# Database (Enhanced)
DATABASE_TYPE=sqlite
DATABASE_URL=./business_tier.db
ENABLE_PERSISTENCE=true

# Logging
LOG_LEVEL=info
LOG_FILE=logs/business_tier.log
